<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileActivity">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:background="@color/app_black"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/app_black"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_profile"
        app:layout_constraintRight_toRightOf="@id/iv_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        tools:text="name"/>


    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="company"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>


    <TextView
        android:id="@+id/tv_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="blog"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_company"
        app:layout_constraintRight_toRightOf="@id/tv_company"
        app:layout_constraintTop_toBottomOf="@id/tv_company"/>


    <TextView
        android:id="@+id/tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="follwers"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_blog"
        app:layout_constraintRight_toRightOf="@id/tv_blog"
        app:layout_constraintTop_toBottomOf="@id/tv_blog"/>

    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="bio"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_followers"
        app:layout_constraintRight_toRightOf="@id/tv_followers"
        app:layout_constraintTop_toBottomOf="@id/tv_followers"/>

    <TextView
        android:id="@+id/tv_repos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="public_repos"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_bio"
        app:layout_constraintRight_toRightOf="@id/tv_bio"
        app:layout_constraintTop_toBottomOf="@id/tv_bio"/>

</androidx.constraintlayout.widget.ConstraintLayout>